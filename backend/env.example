# ============================================
# PhotoStore Backend - Environment Variables
# ============================================
# Copy file này thành .env và điều chỉnh theo nhu cầu

# Database Configuration
DATABASE_URL=mysql+pymysql://photostore_user:photostore_pass@mysql:3306/photostore

# Project Settings
PROJECT_NAME=PhotoStore
API_V1_STR=/api/v1
ENVIRONMENT=local

# Security Keys (ĐỔI TRONG PRODUCTION!)
SECRET_KEY=supersecretkey_change_in_production
REFR_SECRET_KEY=supersecretkeyrefresh_change_in_production

# CORS Origins (Frontend URLs) - Các URL được phép gọi API, phân cách bằng dấu phẩy
# Thêm URL frontend Next.js của bạn vào đây
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:3001

# Keycloak Configuration
KEYCLOAK_URL=http://keycloak:8080/realms/photostore_realm
CLIENT_ID=photostore_client
ADMIN_CLIENT_ID=admin-cli
ADMIN_CLIENT_SECRET=your-admin-client-secret-here
